<%- include('../header') %>


<h1>Categorias</h1>

<table class="table">
    <thead>
    <tr>
        <th>Categoria</th>
        <th>Ações</th>
       
    </tr>
    </thead>
    <tbody>
    <% categorias.forEach(categoria => { %>
        <tr>
            <td><a href="/publicacoes/categoria/<%= categoria.id %>">
            <%= categoria.categoria %>
            </a></td>
            <td><a class="btn btn-info" href="/categorias/editar/<%= categoria.id %>">Editar</a>
            <a class="btn btn-danger" href="/categorias/excluir/<%= categoria.id %>">Excluir</a></td>
        </tr>  
    <% }) %>      
    </tbody>
</table>
<div>
    <a href="/categorias/nova" class="btn btn-primary">Nova Categoria</a><a href="/publicacoes/nova" class="btn btn-primary">Nova Publicação</a>
</div>


<%- include('../footer') %>